    <main class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-8 md:py-12">
        <div id="invoiceContainer">
            <div class="flex items-center justify-center py-24">
                <div class="text-center">
                    <div class="inline-block animate-spin rounded-full h-12 w-12 border-b-2 border-[#2c77d1] mb-4"></div>
                    <p class="text-gray-400">Loading invoice...</p>
                </div>
            </div>
        </div>
    </main>

    <div id="gigiAssistant">
        <div class="gigi-button" onclick="openGigiChat()">
            <div class="gigi-icon">G</div>
        </div>
        <div class="gigi-tooltip">Need help? Chat with Gigi!</div>
    </div>

    <script src="{% static 'marketplace/assets/js/config.js' %}"></script>
    <script>
        const invoiceContainer = document.getElementById('invoiceContainer');
        let orderData = null;

        function getOrderNumber() {
            const params = new URLSearchParams(window.location.search);
            return params.get('order');
        }

        async function loadOrder() {
            const orderNumber = getOrderNumber();
            if (!orderNumber) {
                window.location.href = '{% url "my_orders" %}';
                return;
            }

            try {
                const response = await apiRequest(API_CONFIG.ORDERS.DETAIL(orderNumber));

                if (!response.ok) throw new Error('Failed to load order');

                orderData = await response.json();
                renderInvoice(orderData);
            } catch (error) {
                invoiceContainer.innerHTML = `
                    <div class="flex items-center justify-center py-24">
                        <div class="text-center">
                            <svg class="w-16 h-16 mx-auto mb-4 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                            <p class="text-gray-400 mb-4">Failed to load invoice</p>
                            <button onclick="loadOrder()" class="px-4 py-2 gradient-bg rounded-lg text-white hover:opacity-90">Retry</button>
                        </div>
                    </div>
                `;
            }
        }

        function renderInvoice(order) {
            const invoiceDate = new Date(order.created_at);
            const dueDate = new Date(invoiceDate);
            dueDate.setDate(dueDate.getDate() + 30);

            invoiceContainer.innerHTML = `
                <div class="card-bg rounded-lg p-8 md:p-12">
                    <div class="flex flex-col md:flex-row md:items-start justify-between mb-12 pb-8 border-b border-[#1a2d4a]">
                        <div>
                            <h1 class="text-4xl font-bold mb-2 gradient-bg bg-clip-text text-transparent">Zunto</h1>
                            <div class="text-sm text-gray-400 leading-relaxed">
                                Zunto Marketplace Limited<br>
                                Lagos, Nigeria<br>
                                Email: support@zunto.com<br>
                                Phone: +234 800 000 0000
                            </div>
                        </div>

                        <div class="mt-6 md:mt-0 text-left md:text-right">
                            <h2 class="text-3xl font-bold mb-4">INVOICE</h2>
                            <div class="text-sm space-y-1">
                                <div><span class="text-gray-400">Invoice #:</span> <span class="font-semibold">${order.order_number}</span></div>
                                <div><span class="text-gray-400">Date:</span> <span class="font-semibold">${invoiceDate.toLocaleDateString()}</span></div>
                                <div><span class="text-gray-400">Due Date:</span> <span class="font-semibold">${dueDate.toLocaleDateString()}</span></div>
                                <div><span class="text-gray-400">Status:</span> <span class="font-semibold">${order.payment_status}</span></div>
                            </div>
                        </div>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-12">
                        <div class="card-bg p-6 rounded-lg">
                            <h3 class="font-semibold mb-4 text-sm uppercase tracking-wider text-gray-400">Bill To</h3>
                            <div class="text-sm leading-relaxed">
                                ${order.shipping_address}<br>
                                ${order.shipping_city}, ${order.shipping_state}<br>
                                ${order.shipping_country}<br>
                                ${order.shipping_phone}
                            </div>
                        </div>

                        <div class="card-bg p-6 rounded-lg">
                            <h3 class="font-semibold mb-4 text-sm uppercase tracking-wider text-gray-400">Ship To</h3>
                            <div class="text-sm leading-relaxed">
                                ${order.shipping_address}<br>
                                ${order.shipping_city}, ${order.shipping_state}<br>
                                ${order.shipping_country}<br>
                                ${order.shipping_phone}
                            </div>
                        </div>
                    </div>

                    <div class="overflow-x-auto mb-8">
                        <table class="w-full">
                            <thead>
                                <tr class="card-bg">
                                    <th class="px-4 py-3 text-left text-xs font-semibold uppercase tracking-wider text-gray-400">Item</th>
                                    <th class="px-4 py-3 text-left text-xs font-semibold uppercase tracking-wider text-gray-400">Seller</th>
                                    <th class="px-4 py-3 text-right text-xs font-semibold uppercase tracking-wider text-gray-400">Quantity</th>
                                    <th class="px-4 py-3 text-right text-xs font-semibold uppercase tracking-wider text-gray-400">Unit Price</th>
                                    <th class="px-4 py-3 text-right text-xs font-semibold uppercase tracking-wider text-gray-400">Total</th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-[#1a2d4a]">
                                ${order.items.map(item => `
                                    <tr class="hover:bg-[#0f1f35] transition-colors">
                                        <td class="px-4 py-4">
                                            <div class="font-semibold">${item.product_name}</div>
                                            <div class="text-xs text-gray-400 mt-1">SKU: ${item.product_id}</div>
                                        </td>
                                        <td class="px-4 py-4 text-sm text-gray-400">${item.seller_name || 'N/A'}</td>
                                        <td class="px-4 py-4 text-right font-semibold">${item.quantity}</td>
                                        <td class="px-4 py-4 text-right">₦${item.unit_price.toLocaleString()}</td>
                                        <td class="px-4 py-4 text-right font-semibold text-[#2c77d1]">₦${item.total_price.toLocaleString()}</td>
                                    </tr>
                                `).join('')}
                            </tbody>
                        </table>
                    </div>

                    <div class="flex justify-end mb-12">
                        <div class="w-full md:w-96 space-y-3">
                            <div class="flex justify-between text-sm">
                                <span class="text-gray-400">Subtotal</span>
                                <span class="font-semibold">₦${order.subtotal.toLocaleString()}</span>
                            </div>
                            <div class="flex justify-between text-sm">
                                <span class="text-gray-400">Shipping</span>
                                <span class="font-semibold">₦${order.shipping_fee.toLocaleString()}</span>
                            </div>
                            ${order.tax_amount > 0 ? `
                                <div class="flex justify-between text-sm">
                                    <span class="text-gray-400">Tax</span>
                                    <span class="font-semibold">₦${order.tax_amount.toLocaleString()}</span>
                                </div>
                            ` : ''}
                            ${order.discount_amount > 0 ? `
                                <div class="flex justify-between text-sm text-green-400">
                                    <span>Discount</span>
                                    <span class="font-semibold">-₦${order.discount_amount.toLocaleString()}</span>
                                </div>
                            ` : ''}
                            <div class="flex justify-between pt-3 border-t border-[#1a2d4a]">
                                <span class="text-lg font-bold">Total</span>
                                <span class="text-2xl font-bold">₦${order.total_amount.toLocaleString()}</span>
                            </div>
                        </div>
                    </div>

                    <div class="card-bg p-6 rounded-lg mb-8">
                        <h3 class="font-semibold mb-4 text-sm uppercase tracking-wider text-gray-400">Payment Information</h3>
                        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 text-sm">
                            <div>
                                <div class="text-gray-400 mb-1">Payment Method</div>
                                <div class="font-semibold">${order.payment_method.replace(/_/g, ' ').replace(/\b\w/g, l => l.toUpperCase())}</div>
                            </div>
                            <div>
                                <div class="text-gray-400 mb-1">Payment Status</div>
                                <div class="font-semibold">${order.payment_status}</div>
                            </div>
                            <div>
                                <div class="text-gray-400 mb-1">Transaction ID</div>
                                <div class="font-semibold">${order.payment_reference || 'N/A'}</div>
                            </div>
                        </div>
                    </div>

                    ${order.notes ? `
                        <div class="card-bg p-6 rounded-lg mb-8">
                            <h3 class="font-semibold mb-3 text-sm uppercase tracking-wider text-gray-400">Order Notes</h3>
                            <div class="text-sm text-gray-400">${order.notes}</div>
                        </div>
                    ` : ''}

                    <div class="text-center pt-8 border-t border-[#1a2d4a]">
                        <p class="text-sm text-gray-400">
                            Thank you for your business!<br>
                            For any questions regarding this invoice, please contact us at support@zunto.com
                        </p>
                    </div>
                </div>
            `;
        }

        function openGigiChat() {
            window.location.href = '/assistant/chat/';
        }

        const gigi = document.getElementById('gigiAssistant');
        let isDragging = false;
        let currentX;
        let currentY;
        let initialX;
        let initialY;
        let xOffset = 0;
        let yOffset = 0;

        gigi.addEventListener('mousedown', dragStart);
        gigi.addEventListener('touchstart', dragStart);
        document.addEventListener('mousemove', drag);
        document.addEventListener('touchmove', drag);
        document.addEventListener('mouseup', dragEnd);
        document.addEventListener('touchend', dragEnd);

        function dragStart(e) {
            if (e.type === 'touchstart') {
                initialX = e.touches[0].clientX - xOffset;
                initialY = e.touches[0].clientY - yOffset;
            } else {
                initialX = e.clientX - xOffset;
                initialY = e.clientY - yOffset;
            }

            if (e.target === gigi || e.target.closest('#gigiAssistant')) {
                isDragging = true;
            }
        }

        function drag(e) {
            if (isDragging) {
                e.preventDefault();
                
                if (e.type === 'touchmove') {
                    currentX = e.touches[0].clientX - initialX;
                    currentY = e.touches[0].clientY - initialY;
                } else {
                    currentX = e.clientX - initialX;
                    currentY = e.clientY - initialY;
                }

                xOffset = currentX;
                yOffset = currentY;

                setTranslate(currentX, currentY, gigi);
            }
        }

        function dragEnd(e) {
            initialX = currentX;
            initialY = currentY;
            isDragging = false;
        }

        function setTranslate(xPos, yPos, el) {
            el.style.transform = `translate3d(${xPos}px, ${yPos}px, 0)`;
        }

        if (!isAuthenticated()) {
            window.location.href = '{% url "login" %}';
        } else {
            loadOrder();
        }
    </script>
</body>
</html>