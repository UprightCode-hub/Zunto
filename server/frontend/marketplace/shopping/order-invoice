<body>
    <div class="actions">
        <button class="btn btn-primary" onclick="window.print()">Print Invoice</button>
        <button class="btn" onclick="downloadPDF()">Download PDF</button>
        <button class="btn" onclick="history.back()">Back to Order</button>
    </div>
    
    <div class="invoice-container" id="invoiceContainer">
        <div style="text-align: center; padding: var(--space-48); color: var(--gray-600);">
            Loading invoice...
        </div>
    </div>
    
    <script src="config.js"></script>
    <script>
        const invoiceContainer = document.getElementById('invoiceContainer');
        
        let orderData = null;
        
        function getOrderNumber() {
            const params = new URLSearchParams(window.location.search);
            return params.get('order');
        }
        
        async function loadOrder() {
            const orderNumber = getOrderNumber();
            if (!orderNumber) {
                window.location.href = 'my-orders.html';
                return;
            }
            
            try {
                const response = await apiRequest(API_CONFIG.ORDERS.DETAIL(orderNumber));
                
                if (!response.ok) throw new Error('Failed to load order');
                
                orderData = await response.json();
                renderInvoice(orderData);
            } catch (error) {
                invoiceContainer.innerHTML = '<div style="text-align: center; padding: var(--space-48); color: var(--gray-600);">Failed to load invoice</div>';
            }
        }
        
        function renderInvoice(order) {
            const invoiceDate = new Date(order.created_at);
            const dueDate = new Date(invoiceDate);
            dueDate.setDate(dueDate.getDate() + 30);
            
            invoiceContainer.innerHTML = `
                <div class="invoice-header">
                    <div class="company-info">
                        <div class="company-name">Zunto</div>
                        <div class="company-details">
                            Zunto Marketplace Limited<br>
                            Lagos, Nigeria<br>
                            Email: support@zunto.com<br>
                            Phone: +234 800 000 0000
                        </div>
                    </div>
                    
                    <div class="invoice-meta">
                        <div class="invoice-title">INVOICE</div>
                        <div class="invoice-details">
                            <strong>Invoice #:</strong> ${order.order_number}<br>
                            <strong>Date:</strong> ${invoiceDate.toLocaleDateString()}<br>
                            <strong>Due Date:</strong> ${dueDate.toLocaleDateString()}<br>
                            <strong>Status:</strong> ${order.payment_status}
                        </div>
                    </div>
                </div>
                
                <div class="addresses">
                    <div class="address-block">
                        <div class="address-title">Bill To</div>
                        <div class="address-content">
                            ${order.shipping_address}<br>
                            ${order.shipping_city}, ${order.shipping_state}<br>
                            ${order.shipping_country}<br>
                            ${order.shipping_phone}
                        </div>
                    </div>
                    
                    <div class="address-block">
                        <div class="address-title">Ship To</div>
                        <div class="address-content">
                            ${order.shipping_address}<br>
                            ${order.shipping_city}, ${order.shipping_state}<br>
                            ${order.shipping_country}<br>
                            ${order.shipping_phone}
                        </div>
                    </div>
                </div>
                
                <table class="items-table">
                    <thead>
                        <tr>
                            <th>Item</th>
                            <th>Seller</th>
                            <th class="text-right">Quantity</th>
                            <th class="text-right">Unit Price</th>
                            <th class="text-right">Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        ${order.items.map(item => `
                            <tr>
                                <td>
                                    <strong>${item.product_name}</strong><br>
                                    <span style="font-size: 12px; color: var(--gray-600);">
                                        SKU: ${item.product_id}
                                    </span>
                                </td>
                                <td>${item.seller_name || 'N/A'}</td>
                                <td class="text-right">${item.quantity}</td>
                                <td class="text-right">₦${item.unit_price.toLocaleString()}</td>
                                <td class="text-right">₦${item.total_price.toLocaleString()}</td>
                            </tr>
                        `).join('')}
                    </tbody>
                </table>
                
                <div class="summary">
                    <div class="summary-row">
                        <span>Subtotal</span>
                        <span>₦${order.subtotal.toLocaleString()}</span>
                    </div>
                    <div class="summary-row">
                        <span>Shipping</span>
                        <span>₦${order.shipping_fee.toLocaleString()}</span>
                    </div>
                    ${order.tax_amount > 0 ? `
                        <div class="summary-row">
                            <span>Tax</span>
                            <span>₦${order.tax_amount.toLocaleString()}</span>
                        </div>
                    ` : ''}
                    ${order.discount_amount > 0 ? `
                        <div class="summary-row">
                            <span>Discount</span>
                            <span>-₦${order.discount_amount.toLocaleString()}</span>
                        </div>
                    ` : ''}
                    <div class="summary-row total">
                        <span>Total</span>
                        <span>₦${order.total_amount.toLocaleString()}</span>
                    </div>
                </div>
                
                <div class="payment-info">
                    <div class="payment-title">Payment Information</div>
                    <div class="payment-details">
                        <div class="payment-item">
                            <span class="payment-label">Payment Method</span>
                            <span>${order.payment_method.replace('_', ' ')}</span>
                        </div>
                        <div class="payment-item">
                            <span class="payment-label">Payment Status</span>
                            <span>${order.payment_status}</span>
                        </div>
                        <div class="payment-item">
                            <span class="payment-label">Transaction ID</span>
                            <span>${order.payment_reference || 'N/A'}</span>
                        </div>
                    </div>
                </div>
                
                ${order.notes ? `
                    <div style="margin-top: var(--space-32); padding: var(--space-16); border: var(--border); background: var(--gray-100);">
                        <strong>Order Notes:</strong><br>
                        ${order.notes}
                    </div>
                ` : ''}
                
                <div class="footer">
                    Thank you for your business!<br>
                    For any questions regarding this invoice, please contact us at support@zunto.com
                </div>
            `;
        }
        
        function downloadPDF() {
            alert('PDF download functionality requires server-side implementation. Use Print to save as PDF for now.');
            window.print();
        }
        
        if (!isAuthenticated()) {
            window.location.href = 'login.html';
        } else {
            loadOrder();
        }
    </script>
</body>
</html>