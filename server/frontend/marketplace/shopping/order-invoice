            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
                <div class="flex items-center justify-between">
                    <a href="{% url 'product_list' %}" class="text-2xl font-bold gradient-bg bg-clip-text text-transparent">
                        Zunto
                    </a>
                    
                    <div class="flex items-center gap-4">
                        <button onclick="window.print()" class="px-4 py-2 gradient-bg rounded-lg text-white hover:opacity-90 transition-opacity duration-200">
                            Print Invoice
                        </button>
                        <button onclick="history.back()" class="px-4 py-2 card-bg rounded-lg text-gray-400 hover:text-white hover:bg-[#1a2d4a] transition-all duration-200">
