<body>
    <header class="header">
        <div class="header-container">
            <a href="index.html" class="logo">Zunto</a>
            <button class="btn" onclick="history.back()">Back</button>
        </div>
    </header>
    
    <main class="container">
        <div id="profileContainer">
            <div class="loading">Loading seller profile...</div>
        </div>
    </main>
    
    <script src="config.js"></script>
    <script>
        const profileContainer = document.getElementById('profileContainer');
        
        let sellerId = null;
        let sellerProducts = [];
        let sellerReviews = [];
        
        function getSellerId() {
            const params = new URLSearchParams(window.location.search);
            return params.get('id');
        }
        
        async function loadSellerProfile() {
            sellerId = getSellerId();
            if (!sellerId) {
                window.location.href = 'index.html';
                return;
            }
            
            try {
                const [productsRes, reviewsRes] = await Promise.all([
                    apiRequest(`/api/market/products/?seller=${sellerId}`, { skipAuth: true }),
                    apiRequest(`/api/reviews/sellers/${sellerId}/reviews/`, { skipAuth: true })
                ]);
                
                if (productsRes.ok) sellerProducts = await productsRes.json();
                if (reviewsRes.ok) sellerReviews = await reviewsRes.json();
                
                if (sellerProducts.length > 0) {
                    renderProfile(sellerProducts[0].seller);
                } else {
                    throw new Error('Seller not found');
                }
            } catch (error) {
                profileContainer.innerHTML = '<div class="loading">Failed to load seller profile</div>';
            }
        }
        
        function renderProfile(seller) {
            const activeProducts = sellerProducts.filter(p => p.status === 'active').length;
            const avgRating = sellerReviews.length > 0 
                ? (sellerReviews.reduce((sum, r) => sum + r.rating, 0) / sellerReviews.length).toFixed(1)
                : 0;
            
            profileContainer.innerHTML = `
                <div class="profile-header">
                    <div class="profile-avatar">
                        ${seller.profile_picture 
                            ? `<img src="${seller.profile_picture}" style="width:100%;height:100%;object-fit:cover;">`
                            : seller.full_name.charAt(0).toUpperCase()
                        }
                    </div>
                    
                    <div class="profile-info">
                        <div class="profile-name">${seller.full_name}</div>
                        
                        <div class="profile-stats">
                            <div class="stat-item">
                                <span class="stat-value">${activeProducts}</span>
                                <span>Active Listings</span>
                            </div>
                            <div class="stat-item">
                                <span class="stat-value">${avgRating}</span>
                                <span>Average Rating</span>
                            </div>
                            <div class="stat-item">
                                <span class="stat-value">${sellerReviews.length}</span>
                                <span>Reviews</span>
                            </div>
                        </div>
                        
                        ${seller.bio ? `<div class="profile-bio">${seller.bio}</div>` : ''}
                        
                        <div class="profile-meta">
                            ${seller.city || seller.state ? `
                                <span>üìç ${seller.city || ''}${seller.city && seller.state ? ', ' : ''}${seller.state || ''}</span>
                            ` : ''}
                            <span>üìÖ Joined ${new Date(seller.date_joined).toLocaleDateString()}</span>
                        </div>
                    </div>
                </div>
                
                <div class="tabs">
                    <div class="tab active" onclick="switchTab('products')">Products (${sellerProducts.length})</div>
                    <div class="tab" onclick="switchTab('reviews')">Reviews (${sellerReviews.length})</div>
                </div>
                
                <div class="tab-content active" id="productsTab">
                    ${renderProductsTab()}
                </div>
                
                <div class="tab-content" id="reviewsTab">
                    ${renderReviewsTab()}
                </div>
            `;
        }
        
        function renderProductsTab() {
            if (sellerProducts.length === 0) {
                return '<div class="loading">No products listed</div>';
            }
            
            return `
                <div class="products-grid">
                    ${sellerProducts.map(product => `
                        <a href="product-detail-enhanced.html?slug=${product.slug}" class="product-card">
                            <div class="product-image">
                                ${product.primary_image 
                                    ? `<img src="${product.primary_image}" alt="${product.title}">`
                                    : '<div style="color: var(--gray-400)">No image</div>'
                                }
                            </div>
                            <div class="product-info">
                                <div class="product-title">${product.title}</div>
                                <div class="product-price">‚Ç¶${product.price.toLocaleString()}</div>
                            </div>
                        </a>
                    `).join('')}
                </div>
            `;
        }
        
        function renderReviewsTab() {
            if (sellerReviews.length === 0) {
                return '<div class="loading">No reviews yet</div>';
            }
            
            return sellerReviews.map(review => `
                <div class="review-card">
                    <div class="review-header">
                        <div class="review-product">${review.product_name || 'Product'}</div>
                        <div class="review-rating">${'‚òÖ'.repeat(review.rating)}${'‚òÜ'.repeat(5 - review.rating)}</div>
                    </div>
                    <div class="review-content">${review.comment}</div>
                </div>
            `).join('');
        }
        
        function switchTab(tabName) {
            document.querySelectorAll('.tab').forEach(tab => tab.classList.remove('active'));
            document.querySelectorAll('.tab-content').forEach(content => content.classList.remove('active'));
            
            event.target.classList.add('active');
            document.getElementById(`${tabName}Tab`).classList.add('active');
        }
        
        loadSellerProfile();
    </script>
</body>
</html>